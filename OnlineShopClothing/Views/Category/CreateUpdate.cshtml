@model OnlineShopClothing.Models.Category
<form method="post" asp-action="CreateUpdate">
    <input type="hidden" asp-for="Id"/>

    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2 class="text-primary">@((Model==null || Model.Id==0)?"Create" : "Update") Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary=All></div>

        <div class="row mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        @if(Model==null || Model.Id==0)
        {
            <button class="btn btn-primary" type="submit">Create</button>
        }
        else
        {
             <button class="btn btn-primary" type="submit">Update</button>
        }
</div>
        <a asp-action="Index" asp-controller="Category">Back to List</a>
</form>
@section scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}
